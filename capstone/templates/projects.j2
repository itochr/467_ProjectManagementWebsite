{% extends 'nav.j2' %}
{% block head %}
<title>Projects</title>
<link rel="stylesheet" href="{{ url_for('static', filename='css/projects.css') }}">
<link rel="stylesheet" href="{{ url_for('static', filename='css/admin.css') }}">
{% endblock %}
{% block body %}

<div class="content">
	<h1><span class="username">{{accountUsername}}</span> Projects</h1>

	{% if screenMsg is defined %}
			<div class="announcement">{{ screenMsg }}</div>
	{% endif %}

{% if sessionDump is defined %}
			<div class="announcement">{{ sessionDump }}</div>
	{% endif %}

	<div class="projects-grid">
		<a class="project-card"><div class="project-content">Project 1</div></a>
		<a class="project-card"><div class="project-content">Project 2</div></a>
		<a class="project-card"><div class="project-content">Project 3</div></a>

		<a class="project-card">
			<div class="project-content">
				<button type="submit" class="project-button">Create New Project</button>
			</div>
		</a>
	</div>

<h2>Projects as a table</h2>
		<div class="instruction">
			<table>
				<thead>
					<tr>
						{% for key in projects[0].keys() %}
						<th>{{ key }}</th>
						{% endfor %}
					</tr>
				<tbody>
					{% for project in projects %}
					<tr>
						{% for key in project.keys() %}
						<td>{{project[key]}}</td>
						{% endfor %}
					</tr>
					{% endfor %}
			</table>
		</div

</div>

{% endblock %}
